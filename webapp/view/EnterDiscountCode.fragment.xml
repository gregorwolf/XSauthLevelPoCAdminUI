<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core">
  <l:VerticalLayout width="100%">
    <l:content>
      <Text text="{/message}">
      </Text>
      <Label
      	id="discountCodeLabel"
      	text="Discount Code">
      </Label>
      <Input
      	id="discountCodeId"
      	placeholder="Enter discount code">
      </Input>
    </l:content>
  </l:VerticalLayout>
</core:FragmentDefinition>